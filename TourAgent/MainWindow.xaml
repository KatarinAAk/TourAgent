<Window x:Class="TourAgent.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TourAgent"
        mc:Ignorable="d"
        Title="Login" Height="250" Width="300">
    <Grid>
        <StackPanel Opacity="0.8">
            <StackPanel.Background>
                <ImageBrush ImageSource="/1674270376_catherineasquithgallery-com-p-serii-fon-blyur-foto-3.jpg"/>
            </StackPanel.Background>
            <TextBlock Text="Email:" Width="200" Foreground="#FFF9F9F9" Height="20"/>
            <TextBox x:Name="EmailTextBox" Width="200" Background="#FFBDBDBD" Height="20"/>
            <TextBlock Text="Пароль:" Width="200" Foreground="#FFF9F9F9" Height="20"/>
            <PasswordBox x:Name="PasswordBox" Width="200" Background="#FFBDBDBD" Height="20"/>
            <Button Content="Login" Click="LoginButton_Click" Width="200" Background="#FFEDEBEB"/>
        </StackPanel>
    </Grid>
</Window>
